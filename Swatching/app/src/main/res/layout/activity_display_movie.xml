<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_display_movie"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.infinit8.swatching.DisplayMovie">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/imgLayout"
                android:layout_width="match_parent"
                android:layout_height="520dp"
                android:layout_weight="100">

                <ImageView
                    android:layout_width="wrap_content"
                    app:srcCompat="@drawable/batman"
                    android:id="@+id/Img_Back"
                    android:scaleType="centerCrop"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/First_Page"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <TextView
                        android:text="Batman Begins"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView6"
                        android:textAlignment="center"
                        android:textStyle="normal|bold"
                        android:textSize="40sp"
                        android:textColor="@android:color/white"
                        android:textAllCaps="true"
                        android:layout_marginTop="100dp" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/Sous_Titres">

                        <TextView
                            android:text="Action / Suspense"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView7"
                            android:layout_weight="1"
                            android:textColor="@android:color/white"
                            android:textAlignment="viewStart"
                            android:textStyle="normal|italic" />

                        <RatingBar
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/ratingBar2"
                            android:layout_weight="1"
                            style="@android:style/Widget.Material.RatingBar.Small"
                            android:numStars="10"
                            android:rating="7" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/buttons_layout"
                    android:layout_gravity="bottom|center_horizontal"
                    android:paddingBottom="5dp">
                    <Button
                        android:text="I will watch it !"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/button7" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:text="Seen and good !"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/button6"
                            android:layout_weight="1" />

                        <Button
                            android:text="Not Interested !"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/button5"
                            android:layout_weight="1" />
                    </LinearLayout>



                </LinearLayout>
            </FrameLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="100">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="380px"
                        app:srcCompat="@drawable/cover_batman_begins"
                        android:id="@+id/imageView3"
                        android:layout_weight="1"
                        android:layout_height="300px"
                        android:layout_marginLeft="10px"
                        android:layout_marginRight="10px" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:text="Batman Begins (2005)"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView2"
                            android:layout_weight="1" />

                        <TextView
                            android:text="Action/Suspense"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView3"
                            android:layout_weight="1" />

                        <RatingBar
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/ratingBar"
                            android:layout_weight="1"
                            style="@android:style/Widget.Material.RatingBar.Small"
                            android:numStars="10"
                            android:rating="7" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
